<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:PacmanAvalonia.ViewModels"
             x:Class="PacmanAvalonia.Views.GameView"
             x:DataType="vm:GameViewModel"
             Focusable="True">

    <DockPanel>
        
        <StackPanel DockPanel.Dock="Top" 
                    Orientation="Horizontal" 
                    Background="Black" 
                    Height="40">
            <TextBlock Text="SCORE: " 
                       Foreground="White" 
                       FontWeight="Bold" 
                       FontSize="20" 
                       VerticalAlignment="Center" 
                       Margin="20,0,0,0"/>
            
            <TextBlock Text="{Binding Score}" 
                       Foreground="Yellow" 
                       FontWeight="Bold" 
                       FontSize="20" 
                       VerticalAlignment="Center"
                       Margin="5,0,0,0"/>
        </StackPanel>

        <Viewbox Stretch="Uniform"> <Canvas Name="GameCanvas" Background="Black" Width="600" Height="600"/>
        </Viewbox>
        
    </DockPanel>
</UserControl>